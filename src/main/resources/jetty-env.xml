<?xml version="1.0"  encoding="ISO-8859-1"?>
<!DOCTYPE Configure PUBLIC "-//Mort Bay Consulting//DTD Configure//EN" "http://www.eclipse.org/jetty/configure.dtd">
<Configure class="org.mortbay.jetty.webapp.WebAppContext">
	<New id="bossDataSource" class="org.mortbay.jetty.plus.naming.Resource">
		<Arg></Arg>
		<Arg>java:comp/env/jdbc/boss</Arg>
		<Arg>
			<New class="org.apache.commons.dbcp.BasicDataSource">
				<Set name="url">jdbc:h2:tcp://localhost/boss;USER=sa;INIT=RUNSCRIPT FROM 'src/main/resources/init-connection.sql'</Set>
			</New>
		</Arg>
	</New>
</Configure>